buscarCompaniaXEmpleado = 	SELECT C.EBCODCIA, C.EBCODSUC, C.EBDESCIA, c.EBDESSUC \
							FROM EBCOMPANIA C INNER JOIN HR_EMPLEADO E \
							ON C.EBCODCIA = E.EMPCODCIA \
							WHERE E.EMPCODCIA = ? AND E.EMPCODSUC = ? \
							AND E.EMPCODTRA = ?
							
listarCompaniasXDocumento = SELECT DISTINCT C.* FROM \
							EBCOMPANIA C INNER JOIN HR_EMPLEADO E ON E.EMPCODCIA = C.EBCODCIA AND E.EMPCODSUC = C.EBCODSUC RIGHT JOIN EBUSUEMP UE \
							ON UE.EMPCODTRA = E.EMPCODTRA AND UE.EMPCODCIA = E.EMPCODCIA AND UE.EMPCODSUC = E.EMPCODSUC \
							WHERE E.EMPNRODOCID = ? AND E.EMPFLGEST = '1'